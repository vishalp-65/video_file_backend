{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Video API",
      "description": "API for video file operations"
    },
    "host": "localhost:8000",
    "basePath": "/",
    "schemes": [
      "http"
    ],
    "paths": {
      "/videos/upload": {
        "post": {
          "summary": "Upload a video",
          "consumes": [
            "multipart/form-data"
          ],
          "parameters": [
            {
              "name": "file",
              "in": "formData",
              "required": true,
              "type": "file"
            }
          ],
          "responses": {
            "200": {
              "description": "Video uploaded successfully"
            }
          }
        }
      }
    }
  }
  